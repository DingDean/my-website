///* Palette generated by Material Palette - materialpalette.com/blue-grey/teal */
dark-primary-c    = #455A64
default-primary-c = #607D8B
light-primary-c   = #CFD8DC
text-primary-c    = #FFFFFF
accent-c          = #009688
primary-text-c    = #212121
secondary-text-c  = #757575
divider-c         = #BDBDBD
hover-c           = #01579B


a
  color accent-c
a:hover
  color hover-c
html, body, h1, h2, h3, h4, h5, h6, p, ul
  padding 0
  margin 0
ul
  list-style-type none
a
  text-decoration none

.slide-fade-enter-active
  transition all .3s ease
.slide-fade-leave-active
  transition all .8s cubic-bezier(1.0, 0.5, 0.8, 1.0)
.slide-fade-enter, .slide-fade-leave-to
  opacity 0
  transform translateY(10px)

side-menu-width = 300px
